rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function getUserRole(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role;
    }
    function isAdmin(uid) {
      return getUserRole(uid) == 'admin';
    }

    // Função auxiliar para verificar se está logado
    function isAuthenticated() {
      return request.auth != null;
    }

    // === REGRAS DE USUÁRIOS (Correção do Erro) ===
    // Permite que qualquer usuário logado LEIA a lista de usuários (para o dropdown funcionar)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    match /orders/{orderId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && (isAdmin(request.auth.uid) || getUserRole(request.auth.uid) == 'sales');
      allow update: if request.auth != null && (isAdmin(request.auth.uid) || getUserRole(request.auth.uid) == 'sales' || getUserRole(request.auth.uid) == 'shipping');
    }
    
    // === REGRAS DE TAREFAS ===
    match /tasks/{taskId} {
      allow read, write: if isAuthenticated();
    }
    
    match /metrics/{date} {
      allow read: if request.auth != null;
      allow write: if false; // Apenas backend
    }
    
    // --- CORREÇÃO AQUI ---
    // Permite que utilizadores logados leiam o status,
    // mas ninguém pode escrever (apenas o backend).
    match /integrations/{docId} {
      allow read: if request.auth != null;
      allow write: if false; 
    }
    // --- FIM DA CORREÇÃO ---
    
    // Coleções Legado
    match /manual_orders/{orderId} { allow read, write: if request.auth != null; }
    match /ml_orders/{orderId} { allow read, write: if request.auth != null; }
    
    // === REGRAS DE SINISTROS/DIVERGÊNCIAS ===
    match /sinistros_divergencias/{document=**} {
      allow read, write: if isAuthenticated();
    }
    
    // === REGRAS DE CONTAGEM/FATURAMENTO ===
    match /faturamento_contagens/{date} {
      allow read, write: if isAuthenticated();
    }
    match /contagens_rascunho/{date} {
      allow read, write: if isAuthenticated();
    }
  }
}