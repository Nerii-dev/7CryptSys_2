rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function getUserRole(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role;
    }
    function isAdmin(uid) {
      return getUserRole(uid) == 'admin';
    }

    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && isAdmin(request.auth.uid);
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    match /orders/{orderId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && (isAdmin(request.auth.uid) || getUserRole(request.auth.uid) == 'sales');
      allow update: if request.auth != null && (isAdmin(request.auth.uid) || getUserRole(request.auth.uid) == 'sales' || getUserRole(request.auth.uid) == 'shipping');
    }
    
    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow create, delete: if request.auth != null && isAdmin(request.auth.uid);
      allow update: if request.auth != null && 
        (isAdmin(request.auth.uid) || request.auth.uid in resource.data.assignedTo);
    }
    
    match /metrics/{date} {
      allow read: if request.auth != null;
      allow write: if false; // Apenas backend
    }
    
    // --- CORREÇÃO AQUI ---
    // Permite que utilizadores logados leiam o status,
    // mas ninguém pode escrever (apenas o backend).
    match /integrations/{docId} {
      allow read: if request.auth != null;
      allow write: if false; 
    }
    // --- FIM DA CORREÇÃO ---
    
    // Coleções Legado
    match /manual_orders/{orderId} { allow read, write: if request.auth != null; }
    match /ml_orders/{orderId} { allow read, write: if request.auth != null; }
    match /faturamento_contagens/{countId} { allow read, write: if request.auth != null; }
    match /contagens_rascunho/{rascunhoId} { allow read, write: if request.auth != null; }
  }
}